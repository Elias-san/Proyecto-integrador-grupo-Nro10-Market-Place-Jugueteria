</header>
    
<section class="container main">
    <div class="row">
      <form action="" >
            <table class="table table-hover">
                    <thead>
                      <tr>
                        
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col"  style="text-align: center;">Cantidad</th>
                        <th scope="col" style="text-align: center;">Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        
                        <td>Toy Story 4 Woody Y Buzz Lightyear</td>
                        <td>13.800</td>
                        <td style="text-align: center;">1</td>
                        <td style="text-align: center;">13.800</td>
                      </tr>
                      
                    </tbody>
                  </table>
                  <article class="subtotales">
                      <table class="table table-hover col-3 col-sm-4 col-md-4 col-lg-3">
                          
                          <tbody>
                            <tr class="table-secondary">
                              <td><strong>Subtotal</strong></td>
                              <td>13.800</td>
                            </tr>
                            <tr class="table-secondary">
                                <td><strong>Descuento</strong></td>
                                <td>0.0</td>
                             </tr>
                             <tr class="table-danger">
                                <td><strong>Total</strong></td>
                                <td>13.800</td>
                             </tr>
                             <tr>
                               
                             </tr>
                          </tbody>
                        </table>
                        
                  </article>
                  <div class="caja-botones">
                      <button type="button" class="btn btn-secondary botones-compra" style="align-content: flex-end;">Continuar</button>
                  </div>   
                  <div class="caja-botones">
                      <button type="button" class="btn btn-danger botones-compra" style="align-content: flex-end;">Finalizar compra</button>
                  </div>   
    </div> <!--row-->
    
  </form>
</section>
